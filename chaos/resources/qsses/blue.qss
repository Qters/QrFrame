	background-color:transparent;
}

QPushButton#statusbar_normalmode {
	background-image: url(:/statusbar/images/blue/status_bar/normal_def.png);
}
QPushButton#statusbar_normalmode:hover {
	background-image: url(:/statusbar/images/blue/status_bar/normal_hover.png);
}

QPushButton#statusbar_simplemode {
	background-image: url(:/statusbar/images/blue/status_bar/simple_mode.png);
}

QPushButton#statusbar_fullmode {
	background-image: url(:/statusbar/images/blue/status_bar/full_mode.png);
}

/*
----------------------------------------------------
	Statusbar
----------------------------------------------------End*/